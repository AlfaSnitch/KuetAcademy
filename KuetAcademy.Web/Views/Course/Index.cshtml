@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager

@model KuetAcademy.Web.Models.ViewModels.CourseDetailsViewModel
@{
}

<div class="container">
    <div class="row blog-container">
        <div class="col-md-12 col-lg-8 center-block">
            @if (Model != null)
            {
                <h1>@Model.Title</h1>
                <div class="center-block" style="display:flex; justify-content:space-between;">
                    <span style="font-size:18px;">@Model.Name</span>
                    <span style="font-weight:bold; font-size:20px; color:#001C30"><i class="bi bi-clock"></i>@Model.Duration</span>
                </div>
                <div class="center-block">
                    <span style="font-size:18px; font-weight:bold;">@Model.Author</span>
                    <span style="font-size:18px; margin-left:20px;">@Model.PublishedDate.ToShortDateString()</span>
                </div>
                <br />

                <div style="display:flex; justify-content:center; height:400px;">
                    <iframe src="@Model.VideoPath"
                            title="YouTube video player" frameborder="0" allow="accelerometer; autoplay;
                            clipboard-write; encrypted-media; gyroscope;
                            picture-in-picture; web-share" allowfullscreen
                            style="border:2px solid green; height:100%; width:100%;">
                    </iframe>
                </div>

                <div class="car">
                </div>

                <br />
                <div class="blog-details-content" style="font-size:18px;">
                    @Html.Raw(Model.Description)
                </div>
                <br />
                <img src="@Model.FeaturedImageUrl" class="img-responsive" />

            }
            else
            {
                <p>No Courses found</p>
            }

        </div>
    </div>
</div>
<br />
<br />