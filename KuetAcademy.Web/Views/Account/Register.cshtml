@model KuetAcademy.Web.Models.ViewModels.RegisterViewModel

@{
}

<div class="split-screen" style="font-weight:500;">
    <div class="left">
        <section class="copy">
            <h1 style="padding-left:10px;font-size:2.25rem;font-weight:700;">Kuet Academy<img src="/images/logo.png" class="img-responsive" style="height:160px; width:160px;float:right;"/></h1>
            
        </section>
    </div>
    <div class="right">
        
        <form method="post">
            <section class="copy">
                @if (TempData["registerflag"] != null)
                {
                    <div class="alert alert-success">
                        <strong>Succes</strong>@TempData["registerflag"]
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                }
                @if (TempData["notRegister"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>Oops</strong>@TempData["notregister"]
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                }
                <h2 style="font-size:1.5rem;font-weight:700;">Sign Up</h2>
                <div class="login-container">
                    <p style="font-size:14px;">
                        Already have an account?
                        <a asp-controller="Account" asp-action="Login"><strong>Log In</strong></a>
                    </p>
                </div>
            </section>
            <div class="input-container name">
                <label for="fname" style="font-size:16px;">Username</label>
                <input type="text" id="username" class="form-control" asp-for="Username" required />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="input-container email">
                <label for="email" style="font-size:16px;">Email</label>
                <input type="email" id="email" class="form-control" asp-for="Email" required/>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="input-container password">
                <label for="password" style="font-size:16px;" asp-for="Password">Password</label>
                <input type="password" id="password" class="form-control" asp-for="Password" required minlength="8" />
                <span class="text-danger" asp-validation-for="Password"></span>
                <i class="bi bi-eye-fill" style="position:relative;top:-49px; right:-300px; font-size:20px;"
                aria-hidden="true" id="eye" onclick="toggle()"></i>
            </div>
            <button class="signup-btn" type="submit">Sign Up</button>
            <span class="text-danger" asp-validation-for="Password"></span>
        </form>
    </div>
</div>
<br />
@section Scripts{
    <script>
        var state = false;
        function toggle(){
            if(state){
                document.getElementById("password").setAttribute("type","password");
                document.getElementById("eye").style.color='black';
                state=false;
            }
            else{
                document.getElementById("password").setAttribute("type", "text");
                document.getElementById("eye").style.color = 'blue';
                state = true;
            }
        }

    </script>
}