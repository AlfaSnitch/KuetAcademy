@model List<KuetAcademy.Web.Models.Domain.Teachers>
@{
}

<div style="background-color:lightgrey; opacity:inherit; border-radius:8px;">
    <div class="container">
        <h1>All  Teachers</h1>
    </div>
</div>

<div class="container" style="background-color:#FFF4F4; height:80%;">

    @if (Model != null && Model.Any())
    {
        <table class="table" style="font-size:16px;">
            <thead style="background-color:lightblue;">
                <tr style="font-size:20px;">
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Facebook</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogpost in Model)
                {
                    <tr>
                        <td><img src="@blogpost.ImageUrl" class="img-re" style="border-radius:100%; height:60px; width:60px;" /></td>
                        <td>@blogpost.Name</td>
                        <td>
                            @blogpost.ShortDescription
                        </td>
                        <td><a class="btn-primary" href="@blogpost.FacebookLink" target="_blank"> Facebook </a></td>
                        <td>
                            <a class="btn btn-default" asp-area=""
                               asp-controller="AdminTeacher"
                               asp-action="Edit"
                               asp-route-id="@blogpost.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Courses found</p>
    }
</div>
<br />
<br />