@model List<KuetAcademy.Web.Models.Domain.Tag> // things coming into the view
@{
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Succes</strong>@TempData["AlertMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}


<div style="background-color:lightgrey; opacity:inherit; border-radius:8px;">
    <div class="container">
        <h1>Show All Tags</h1>
    </div>
</div>
<br />
<br />
<div class="container py-5" style="height:contain;">
    @if (Model != null && Model.Any())
    {
        <table class="table" style="font-size:16px;">
            <thead style="background-color:lightblue;">
                <tr style="font-size:20px;">
                    <th>ID</th>
                    <th>NAME</th>
                    <th>DISPLAY NAME</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a class="btn btn-primary"asp-area="" asp-controller="AdminTag"
                            asp-action="Edit"
                               asp-route-id="@tag.Id"><b>Edit</b></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tags Found</p>
    }
</div>
<br />
<br />


