@model KuetAcademy.Web.Models.ViewModels.AddTagRequest
@{
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Succes</strong>@TempData["AlertMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<div class="container" style="height:400px;">

    <div style="background-color:lightgrey; opacity:inherit; border-radius:8px;">
        <div class="container">
            <h1> Add New Tag - Admin Functionality</h1>
        </div>
    </div>
    <div class="container py-5">
        <br />
        <form method="post">
            <div class="mb-3">
                <label style="font-weight:bold; font-size:20px">Name</label>
                <input type="text" class="form-control" id="name" name="name" asp-for="name" required/>
                <span class="text-danger" asp-validation-for="name"></span>
            </div>
            <br />
            <div class="mb-3">
                <label style="font-weight:bold; font-size:20px">Display Name</label>
                <input type="text" class="form-control" id="displayName" name="displayName" asp-for="displayName" required/>
                <span class="text-danger" asp-validation-for="displayName"></span>
            </div>
            <br>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary" style="margin-right:5px; font-size:20px;">Save</button>
            </div>

        </form>
    </div>
</div>



